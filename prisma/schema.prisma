  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  usages    Usage[] //  Relation
  messages  Message[]//Relation with messages
}

model Usage {
  id        String   @id @default(uuid())
  userId    String   @db.Uuid // Must match User.id type
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  createdAt DateTime @default(now())
}

model Message{
   id        String   @id @default(uuid())
    userId    String   @db.Uuid // Must match User.id type
    content String
      user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime    @default(now())
}